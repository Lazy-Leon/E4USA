<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        >

        <TextView
            android:id="@+id/designcert"
            android:layout_width="277dp"
            android:layout_height="115dp"
            android:gravity="center_vertical|right"

            android:text="DESIGNCERT"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/fourcomps"
            android:layout_width="314dp"
            android:layout_height="176dp"
            android:gravity="center_vertical|right"

            android:text="Four Components of Design"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/pleaseselect"
            android:layout_width="289dp"
            android:layout_height="227dp"
            android:gravity="center_vertical|right"

            android:text="Select a Component below to"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/pleaseselect2"
            android:layout_width="342dp"
            android:layout_height="272dp"
            android:gravity="center_vertical|right"

            android:text="view detailed desctiption of Each Design Step"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/bottomstuff"
            android:layout_width="wrap_content"
            android:layout_height="757dp">


            <LinearLayout
                android:id="@+id/mLlayoutmiddleButtons"
                android:layout_width="match_parent"
                android:layout_height="182dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14dp">

                <Button
                    android:id="@+id/buttona"
                    android:layout_width="409dp"
                    android:layout_height="114dp"
                    android:layout_weight="1"
                    android:background="#8FEBF3"
                    android:text="Component I" />

                <Button
                    android:id="@+id/buttonb"
                    android:layout_width="409dp"
                    android:layout_height="114dp"
                    android:layout_weight="1"
                    android:background="#E91E63"
                    android:text="Component II" />

                <Button
                    android:id="@+id/buttonc"
                    android:layout_width="409dp"
                    android:layout_height="114dp"
                    android:layout_weight="1"
                    android:background="#DD2196F3"
                    android:text="Component III" />

                <Button
                    android:id="@+id/buttond"
                    android:layout_width="409dp"
                    android:layout_height="114dp"
                    android:layout_weight="1"
                    android:background="#2CCC32"
                    android:text="Component IV" />


            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mLlayoutBottomButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">


            <Button
                android:id="@+id/backbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#d4d1d4"
                android:drawableLeft="@drawable/ic_dashboard_black_24dp"
                android:textColor="#ff0000"
                android:text="Back" />


        </LinearLayout>

        <Button
            android:id="@+id/Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="top|right"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:text="Logout"
            android:textColor="#4CAF50"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/piccenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="270dp"
            android:layout_height="201dp"
            android:layout_centerInParent="true"

            app:srcCompat="@drawable/icon1" />


    </RelativeLayout>


</RelativeLayout>