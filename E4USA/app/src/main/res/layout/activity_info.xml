<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/mLlayoutBottomButtons"

        >

        <TextView
            android:id="@+id/designcert"
            android:layout_width="277dp"
            android:layout_height="115dp"
            android:gravity="center_vertical|right"

            android:text="DESIGNCERT"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/fourcomps"
            android:layout_width="314dp"
            android:layout_height="176dp"
            android:gravity="center_vertical|right"

            android:text="Four Components of Design"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/pleaseselect"
            android:layout_width="289dp"
            android:layout_height="227dp"
            android:gravity="center_vertical|right"

            android:text="Select a Component below to"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/pleaseselect2"
            android:layout_width="342dp"
            android:layout_height="272dp"
            android:gravity="center_vertical|right"

            android:text="view detailed desctiption of Each Design Step"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textSize="14sp" />




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/piccenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="373dp"
            android:layout_height="203dp"
            android:layout_centerInParent="true"

            app:srcCompat="@drawable/icon1" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mLlayoutBottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center|bottom">

        <Button
            android:id="@+id/backbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#d4d1d4"
            android:drawableLeft="@drawable/ic_dashboard_black_24dp"
            android:textColor="#ff0000"
            android:text="Back" />

    </LinearLayout>


</RelativeLayout>
