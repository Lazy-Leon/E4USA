<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="82dp"
        android:text="Submit Status" />

    <TextView
        android:id="@+id/CourseText"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="156dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/SubmitText"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="82dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/NameText"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="211dp"
        android:layout_marginBottom="118dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/CreatedText"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="82dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/DueText"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="155dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/GradeText"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="119dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="118dp"
        android:text="Grade" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="156dp"
        android:text="Due Date" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="312dp"
        android:layout_marginBottom="82dp"
        android:text="Created" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="314dp"
        android:layout_marginBottom="118dp"
        android:text="Name" />

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#C72C75"
        android:gravity="center">

        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="Project"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/white"
            android:textSize="36sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mLlayoutBottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center|bottom">

        <Button
            android:id="@+id/buttonswitchUser"
            android:layout_below="@id/buttonswitchUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#d4d1d4"
            android:drawableLeft="@drawable/ic_dashboard_black_24dp"
            android:text="Dashboard"
            android:textColor="#ff0000"/>

        <Button
            android:id="@+id/About"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonInfo"
            android:layout_weight="1"
            android:background="#d4d1d4"
            android:drawableLeft="@drawable/ic_about_black_24dp"
            android:text="About"
            android:textColor="#ff0000"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_above="@+id/mLlayoutBottomButtons"
        android:layout_marginBottom="226dp">

        <TextView
            android:id="@+id/Display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/header"
            android:layout_below="@+id/CourseText"
            android:text="TextView" />
    </ScrollView>

    <Button
        android:id="@+id/btn_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mLlayoutBottomButtons"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="166dp"
        android:text="Button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="315dp"
        android:layout_marginBottom="155dp"
        android:text="Course" />

</RelativeLayout>